<h1 class="mb-10">Sign in</h1>

<%= form_with(url: sign_in_path) do |form| %>
  <div>
    <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.email_field :email,
      value: params[:email_hint],
      required: true,
      autofocus: true,
      autocomplete: "email",
      class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5"
       %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password,
        required: true,
        autocomplete: "current-password",
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5"

        %>
  </div>

  <div>
    <%= form.submit "Sign in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<br>


<br>

<div>
  <%= link_to "Sign up", sign_up_path %> |
  <%= link_to "Forgot your password?", new_identity_password_reset_path %>
</div>
